<div class="row" style="padding:0px">
    <div class="col-md-3">
        <button class="btn btn-danger" type="button">Calibrate</button>
    </div>
    <div class="col-md-3">
        <button class="btn btn-danger" type="button">Stop</button>

    </div>
    <div class="col-md-6">

        <input {{on 'change' this.chooseSpeed}} type="range" class="form-range" min="100" max="700" id="customRange2"
            value={{this.speed}}>
        <label for="customRange2" class="form-label">Speed</label>
    </div>
</div>