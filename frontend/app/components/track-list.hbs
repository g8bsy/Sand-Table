{{#if this.mightPlay}}
<BsModalSimple
  @open={{true}}
  @title="Play Track"
  @size="sm"
  @closeTitle="Cancel" @submitTitle="Ok"
  @onHidden={{fn (mut this.mightPlay) null}}>
  <BsForm @model={{this}} @onSubmit={{this.queueTrack}} @submitOnEnter={{true}} as |Form|>
    <img alt="{{this.mightPlay.name}}" src="/rendered/{{this.mightPlay.name}}.png" width="50" height="50"/>&nbsp;&nbsp;{{this.mightPlay.name}}
    <Form.element @controlType="checkbox" @label="Erase First?" @value={{this.eraseFirst}} />
    <Form.element @controlType="checkbox" @label="Play Immediately?" @value={{this.playImmediately}} />
  </BsForm>
</BsModalSimple>
{{/if}}

<BsAccordion as |acc|>
  {{#each @fileList as |file|}}
    <acc.item as |aitem|>
      <aitem.title>
        <img alt="{{file.name}}" src="/rendered/{{file.name}}.png" width="50" height="50"/>&nbsp;&nbsp;{{file.name}}
      </aitem.title>
      <aitem.body>
        <div class="text-center play-container">
          <img alt="{{file.name}}" src="/rendered/{{file.name}}.png" width="100%"/>
          <BsButton @size="lg" @type="success" @onClick={{fn this.setMightPlay file}} @outline={{true}} class="play-button"><FaIcon @icon="play" /></BsButton>
        </div>
      </aitem.body>
    </acc.item>
  {{/each}}
</BsAccordion>